# Directories
alias u="upto"

# Utitlies:
alias pss="python -m SimpleHTTPServer"

# Git
alias gt:ad="git add --all ;and git status"
alias gt:cm="git commit -m"
alias gt:ps="git push"
alias gt:pl="git pull"
alias gt:ra="git remote add"
alias gt:pa="git push --all ;and git push --tags"

# Git Flow
alias gf:fs="git flow feature start"
alias gf:ff="git flow feature finish"
alias gf:id="git flow init -d"
alias gf:pb="git flow publish"
alias gf:bs="git flow bugfix start"
alias gf:bf="git flow bugfix finish"
alias gf:hs="git flow hotfix start"
alias gf:hf="git flow hotfix finish"
alias gf:rs="git flow release start"
alias gf:rf="git flow release finish"

# Express VPN
alias evc="expressvpn connect"
alias evd="expressvpn disconnect"
alias evl="expressvpn list"

